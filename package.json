		"path": "0.12.7",
		"react-docgen-typescript": "2.2.2",
		"storybook": "8.6.12",
		"storybook-watch": "1.0.2",
		"tailwindcss": "4.1.3",
		"typescript": "5.8.3",
		"vite": "6.2.6",
		"vite-plugin-svgr": "4.3.0",
		"vite-tsconfig-paths": "5.1.4"
	}
