{
	"name": "egdev-react-boilerplate",
	"private": false,
	"version": "2.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"optimize": "vite optimize",
		"analyze": "vite build --mode production --reportCompressedSize",
		"clean": "rm -rf dist node_modules pnpm-lock.yaml package-lock.json && npm cache clean --force",
		"rebuild": "pnpm run clean && pnpm install",
		"biome-all": "biome check --write .",
		"biome-staged": "biome check --write --staged --verbose",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"storybook-clean-cache": "rm -rf node_modules/.cache/storybook"
	},
	"dependencies": {
		"@radix-ui/react-menubar": "1.1.7",
		"@radix-ui/react-slot": "1.2.0",
		"@tanstack/react-query": "5.72.2",
		"axios": "1.8.4",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.487.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-router": "7.5.0",
		"react-router-dom": "7.5.0",
		"tailwind-merge": "3.2.0",
		"tw-animate-css": "1.2.5",
		"vite-plugin-mock-simple": "1.0.3",
		"zustand": "5.0.3"
	},
	"devDependencies": {
		"@egdev6/component-creator": "1.0.3",
		"@biomejs/biome": "1.9.4",
		"@evilmartians/lefthook": "1.11.9",
		"@storybook/addon-a11y": "8.6.12",
		"@storybook/addon-docs": "8.6.12",
		"@storybook/addon-essentials": "8.6.12",
		"@storybook/addon-interactions": "8.6.12",
		"@storybook/addon-links": "8.6.12",
		"@storybook/addon-mdx-gfm": "8.6.12",
		"@storybook/blocks": "8.6.12",
		"@storybook/react": "8.6.12",
		"@storybook/react-vite": "8.6.12",
		"@storybook/test": "8.6.12",
		"@storybook/theming": "8.6.12",
		"@tailwindcss/vite": "4.1.3",
		"@types/node": "22.14.0",
		"@types/react": "19.1.1",
		"@types/react-dom": "19.1.2",
		"@types/react-router-dom": "5.3.3",
		"@vitejs/plugin-react": "4.3.4",
		"@vitejs/plugin-react-swc": "3.8.1",
